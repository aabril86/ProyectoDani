<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252a34"
    tools:context=".SignUpFragment">


    <TextView
        android:id="@+id/communityTextSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to our community!"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textSignUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/usernameSignUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/communityTextSignUp" />

    <EditText
        android:id="@+id/usernameSignUp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton"
        android:hint="Username"
        app:layout_constraintBottom_toTopOf="@id/passwordSignUp"
        app:layout_constraintTop_toBottomOf="@+id/textSignUp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"/>

    <EditText
        android:id="@+id/passwordSignUp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton"
        android:hint="Password"
        app:layout_constraintBottom_toTopOf="@id/confirmPasswordSignUp"
        app:layout_constraintTop_toBottomOf="@+id/usernameSignUp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"/>

    <EditText
        android:id="@+id/confirmPasswordSignUp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/roundedbutton"
        android:hint="Confirm password"
        app:layout_constraintBottom_toTopOf="@id/signUp"
        app:layout_constraintTop_toBottomOf="@+id/passwordSignUp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="54dp"/>

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="SIGN UP"
        app:layout_constraintBottom_toTopOf="@id/nomesImatgeSignUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPasswordSignUp" />

    <ImageView
        android:id="@+id/nomesImatgeSignUp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo_solo_imagen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>